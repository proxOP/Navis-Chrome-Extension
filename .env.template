# Navis Chrome Extension - Environment Variables
# Copy this to .env and fill in your values

# AWS Credentials (RECOMMENDED - 10-120x cost savings)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# AWS Service Configuration (Optional - uses defaults if not set)
DYNAMODB_TABLE_NAME=navis-sessions
DYNAMODB_TTL_HOURS=24
S3_BUCKET_NAME=navis-rl-experiences
S3_LIFECYCLE_DAYS=90
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_REGION=us-east-1

# LLM API Keys (Fallback if AWS not configured)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# Chrome Extension Settings
EXTENSION_ID=your_extension_id_here
